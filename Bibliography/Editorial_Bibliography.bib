@Article{Silber_10861159,
  Title                    = {Anesthesiologist direction and patient outcomes.},
  Author                   = {Silber, J. H. and Kennedy, S. K. and Even-Shoshan, O. and Chen, W. and Koziol, L. F. and Showan, A. M. and Longnecker, D. E.},
