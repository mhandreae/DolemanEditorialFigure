  Institution              = {Program on Health Care Quality and Outcomes, Division of Health Services and Social Policy Research, RTI International, Research Triangle Park, North Carolina 27709-2194, USA. berkman@rti.org},
  Keywords                 = {Educational Status; Health Care Costs; Health Knowledge, Attitudes, Practice; Health Literacy; Health Services Accessibility; Health Services, utilization; Healthcare Disparities; Hospitalization, statistics /&/ numerical data; Humans; Outcome Assessment (Health Care); United States},
